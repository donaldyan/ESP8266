#!/bin/sh

#
# This script computes the various flags needed to run GNU C++ testsuites
# (compiler specific as well as library specific). 
#
# Written by Benjamin Kosnik <bkoz@redhat.com>
#            Gabriel Dos Reis <gdr@codesourcery.com>
#

# Print a message saying how this script is intended to be invoked
print_usage() {
    cat <<EOF
Usage: 
    testsuite_flags --install-includes
		    --build-includes
		    --build-cxx
		    --build-cc
		    --install-cxx
		    --cxxflags
		    --cxxpchflags
		    --cxxldflags
EOF
}

# Establish configure-generated directory structure.
BUILD_DIR=/Volumes/ESPTools/esp-open-sdk/crosstool-NG/.build/xtensa-lx106-elf/build/build-cc-final/xtensa-lx106-elf/libstdc++-v3
SRC_DIR=/Volumes/ESPTools/esp-open-sdk/crosstool-NG/.build/src/gcc-4.8.2/libstdc++-v3
PREFIX_DIR=/esptools/esp-open-sdk/xtensa-lx106-elf
query=$1

case ${query} in
    --install-includes)
      INCLUDES="-I${SRC_DIR}/testsuite/util"
      echo ${INCLUDES}
      ;;
    --build-includes)
      INCLUDES="-nostdinc++ -I/Volumes/ESPTools/esp-open-sdk/crosstool-NG/.build/xtensa-lx106-elf/build/build-cc-final/xtensa-lx106-elf/libstdc++-v3/include/xtensa-lx106-elf -I/Volumes/ESPTools/esp-open-sdk/crosstool-NG/.build/xtensa-lx106-elf/build/build-cc-final/xtensa-lx106-elf/libstdc++-v3/include -I/Volumes/ESPTools/esp-open-sdk/crosstool-NG/.build/src/gcc-4.8.2/libstdc++-v3/libsupc++ 
                -I${SRC_DIR}/include/backward -I${SRC_DIR}/testsuite/util"
      echo ${INCLUDES}
      ;;
    --install-cxx)
      CXX=${PREFIX_DIR}/bin/g++
      echo ${CXX}
      ;;
    --build-cxx)
      CXX_build=" /Volumes/ESPTools/esp-open-sdk/crosstool-NG/.build/xtensa-lx106-elf/build/build-cc-final/./gcc/xgcc -shared-libgcc -B/Volumes/ESPTools/esp-open-sdk/crosstool-NG/.build/xtensa-lx106-elf/build/build-cc-final/./gcc -nostdinc++ -L/Volumes/ESPTools/esp-open-sdk/crosstool-NG/.build/xtensa-lx106-elf/build/build-cc-final/xtensa-lx106-elf/libstdc++-v3/src -L/Volumes/ESPTools/esp-open-sdk/crosstool-NG/.build/xtensa-lx106-elf/build/build-cc-final/xtensa-lx106-elf/libstdc++-v3/src/.libs -B/esptools/esp-open-sdk/xtensa-lx106-elf/xtensa-lx106-elf/bin/ -B/esptools/esp-open-sdk/xtensa-lx106-elf/xtensa-lx106-elf/lib/ -isystem /esptools/esp-open-sdk/xtensa-lx106-elf/xtensa-lx106-elf/include -isystem /esptools/esp-open-sdk/xtensa-lx106-elf/xtensa-lx106-elf/sys-include   "
      CXX=`echo "$CXX_build" | sed 's,gcc/xgcc ,gcc/xg++ ,'`
      echo ${CXX}
      ;;
    --build-cc)
      CC_build=" /Volumes/ESPTools/esp-open-sdk/crosstool-NG/.build/xtensa-lx106-elf/build/build-cc-final/./gcc/xgcc -B/Volumes/ESPTools/esp-open-sdk/crosstool-NG/.build/xtensa-lx106-elf/build/build-cc-final/./gcc/ -B/esptools/esp-open-sdk/xtensa-lx106-elf/xtensa-lx106-elf/bin/ -B/esptools/esp-open-sdk/xtensa-lx106-elf/xtensa-lx106-elf/lib/ -isystem /esptools/esp-open-sdk/xtensa-lx106-elf/xtensa-lx106-elf/include -isystem /esptools/esp-open-sdk/xtensa-lx106-elf/xtensa-lx106-elf/sys-include   "
      CC="$CC_build"
      echo ${CC}
      ;;
    --cxxflags)
      CXXFLAGS_default="-D_GLIBCXX_ASSERT -fmessage-length=0"
      CXXFLAGS_config="-ffunction-sections -fdata-sections -g -Os "
      echo ${CXXFLAGS_default} ${CXXFLAGS_config}
      ;;
    --cxxparallelflags)
      CXXFLAGS_parallel="-D_GLIBCXX_PARALLEL -fopenmp
			 -B${BUILD_DIR}/../libgomp 
                         -I${BUILD_DIR}/../libgomp 
			 -L${BUILD_DIR}/../libgomp/.libs -lgomp"
      echo ${CXXFLAGS_parallel}
      ;;
    --cxxpchflags)
      PCHFLAGS="-include bits/stdc++.h"
      echo ${PCHFLAGS}
      ;;
    --cxxldflags)
      SECTIONLDFLAGS=" "
      echo ${SECTIONLDFLAGS}
      ;;
    *)
      print_usage
      ;;
esac

exit 0
